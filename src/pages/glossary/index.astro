---
import Layout from "../../layouts/Layout.astro";
import { getCollection } from "astro:content";

const terms = await getCollection("glossary");
---

<Layout title="用語集 | スタートアップ白書">
  <section class="max-w-4xl mx-auto px-4 py-12">
    <h1 class="text-3xl font-bold mb-8">用語集（IPO・資本政策 等）</h1>

    <dl class="space-y-6">
      {terms.map((t) => (
        <div class="p-4 bg-white shadow rounded hover:bg-indigo-50" id={t.slug}>
          <dt class="font-semibold text-indigo-700">
            <a href={`/glossary/${t.slug}/`}>{t.data.term}</a>
          </dt>
          <dd class="mt-1 text-gray-700">{t.data.definition}</dd>
        </div>
      ))}
    </dl>
  </section>
</Layout>
