---
import Layout from "../../layouts/Layout.astro";
import { getCollection } from "astro:content";

const posts = await getCollection("failures");
---

<Layout title="経営失敗談 | スタートアップ白書">
  <section class="max-w-4xl mx-auto px-4 py-12">
    <h1 class="text-3xl font-bold mb-8">経営失敗談・リブート事例</h1>

    <ul class="space-y-4">
      {posts.map((p) => (
        <li class="p-4 bg-white shadow rounded hover:bg-indigo-50">
          <a href={`/failures/${p.slug}/`} class="text-xl font-semibold text-red-700">
            {p.data.title}
          </a>
          <p class="text-sm text-gray-500 mt-1">{p.data.date}</p>
          {p.data.excerpt && <p class="mt-2 text-gray-600">{p.data.excerpt}</p>}
        </li>
      ))}
    </ul>
  </section>
</Layout>
