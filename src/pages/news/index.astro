---
import Layout from "../../layouts/Layout.astro";
import { getCollection } from "astro:content";

const news = await getCollection("news");
---

<Layout title="ニュース | スタートアップ白書">
  <section class="max-w-4xl mx-auto px-4 py-12">
    <h1 class="text-3xl font-bold mb-8">自動取得ニュース</h1>

    <ul class="space-y-4">
      {news.map((n) => (
        <li class="p-4 bg-white shadow rounded hover:bg-indigo-50">
          <a href={`/news/${n.slug}/`} class="text-xl font-semibold text-indigo-700">
            {n.data.title}
          </a>
          <p class="text-sm text-gray-500 mt-1">{n.data.date}</p>
          {n.data.excerpt && <p class="mt-2 text-gray-600">{n.data.excerpt}</p>}
        </li>
      ))}
    </ul>
  </section>
</Layout>
